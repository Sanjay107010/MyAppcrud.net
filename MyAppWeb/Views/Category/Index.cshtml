@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<h1> list of categoryes Cetogories</h1>
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">categories</div>
        <div class="cpl-6">
            <a class="btn btn-primary" asp-action="Create" asp-controller="Category"><i class="bi bi-plus-square-fill"></i> &nbsp; Create new category</a>
        </div>
    </div>

</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>

            <th>Name</th>
            <th>order</th>
            <th colspan="2">Action</th>
       
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
         
            <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td role="group">
                    <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id"> Edit</a> &nbsp; &nbsp;
                    <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id"> <i class="bi bi-trash3-fill"></i> Delete</a>
            </td>
            
                
            
        </tr>
        }
    </tbody>
</table>

